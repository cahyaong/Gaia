<Application
  x:Class="nGratis.Cop.Gaia.Wpf.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:core="http://schemas.ngratis.com/2014/core"
  xmlns:local="clr-namespace:nGratis.Cop.Gaia.Wpf"
  xmlns:mui="http://firstfloorsoftware.com/ModernUI">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>
          <local:AppBootstrapper x:Key="Bootstrapper" />
          <core:CaliburnContentLoader x:Key="CaliburnContentLoader" />
          <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
        <ResourceDictionary>
          <Style TargetType="mui:ModernWindow">
            <Setter Property="ContentLoader" Value="{StaticResource CaliburnContentLoader}" />
          </Style>
          <Style TargetType="mui:ModernFrame">
            <Setter Property="ContentLoader" Value="{StaticResource CaliburnContentLoader}" />
          </Style>
          <Style TargetType="mui:ModernTab">
            <Setter Property="ContentLoader" Value="{StaticResource CaliburnContentLoader}" />
          </Style>
        </ResourceDictionary>
        <core:SharedResourceDictionary Source="/nGratis.Cop.Gaia.Wpf;component/Themes/Cop.Theme.Dark.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
